<Window x:Class="Exercise4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
         Title="Countries treeview" Height="350" Width="500">
    <Grid>
        <TreeView Name="countriesTreeView">
            <TreeViewItem Header="North America" IsExpanded="True">
                <TreeViewItem Margin="0 10 0 0">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Canada"/>
                            <Image Source="./images/canada.png" Width="18" Height="18" Margin="5,0,5,0"/>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem Margin="0 10 0 0">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mexico"/>
                            <Image Source="./images/mexico.png" Width="18" Height="18" Margin="5,0,5,0"/>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem Margin="0 10 0 0">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="USA"/>
                            <Image Source="./images/usa.png" Width="18" Height="18" Margin="5,0,5,0"/>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>

            <TreeViewItem Header="South America" IsExpanded="True">
                <TreeViewItem Margin="0 10 0 0">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Argentina"/>
                            <Image Source="./images/argentina.png" Width="18" Height="18" Margin="5,0,5,0"/>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem Margin="0 10 0 0">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Brazil"/>
                            <Image Source="./images/brazil.png" Width="18" Height="18" Margin="5,0,5,0"/>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem Margin="0 10 0 0">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Uruguay"/>
                            <Image Source="./images/uruguay.png" Width="18" Height="18" Margin="5,0,5,0"/>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</Window>
