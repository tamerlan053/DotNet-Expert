<Window x:Class="Exercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Button Content="Simple Button" HorizontalAlignment="Left" Margin="32,31,0,0" VerticalAlignment="Top"/>

        <Button Margin="31,67,71,163">
            <Button.Content>
                <StackPanel>
                    <Image Source="images/banner.png" Height="18"/>
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Image and text button"/>
                </StackPanel>
            </Button.Content>


        </Button>
        <Grid>
            <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="51" Margin="33,154,0,0">

                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Yellow" Offset="0" />
                        <GradientStop Color="Red" Offset="0.33" />
                        <GradientStop Color="Blue" Offset="0.66" />
                        <GradientStop Color="Green" Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>

                <Button.Foreground>
                    <SolidColorBrush Color="White" />
                </Button.Foreground>

                <Button.FontWeight>Bold</Button.FontWeight>
            </Button>
        </Grid>
    </Grid>
</Window>
