<Window x:Class="Exercise3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Toggle and group" Height="350" Width="200">


    <Canvas Margin="10" Height="300">
        <GroupBox Header="Leeftijd" Height="100" Canvas.Left="10" Canvas.Top="10">
            <StackPanel>
                <CheckBox Content="0-18" Name="Age0_18" Margin="10,5,0,0" IsChecked="True"/>
                <CheckBox Content="19-50" Name="Age19_50" Margin="10,5,0,0"/>
                <CheckBox Content="50-80" Name="Age50_80" Margin="10,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Geslacht" Canvas.Left="10" Canvas.Top="120">
            <StackPanel>
                <RadioButton Content="Man" IsChecked="True"/>
                <RadioButton Content="Vrouw"/>
            </StackPanel>
        </GroupBox>
    </Canvas>
</Window>
