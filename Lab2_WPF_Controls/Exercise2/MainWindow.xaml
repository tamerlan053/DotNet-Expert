<Window x:Class="Exercise2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Grow and shrink" Height="250" Width="730">
    <Grid>
        <Canvas Name="paperCanvas" Height="175" Width="700" Background="LightGray" Margin="14,49,16,10">
            <Rectangle  Name="myRectangle" Stroke="Black" Fill="Orange" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="50" Width="50" Canvas.Left="9" Canvas.Top="9"></Rectangle>
        </Canvas>
        
        <RepeatButton Name="growButton" Content="Grow" HorizontalAlignment="Left" Margin="15,14,0,0" VerticalAlignment="Top" Height="22" Width="65" Click="growButton_Click"/>
        <RepeatButton Name="shrinkButton" Content="Shrink" HorizontalAlignment="Left" Margin="99,14,0,0" VerticalAlignment="Top" Height="22" Width="65" Click="shrinkButton_Click"/>
    </Grid>
</Window>
