<Window x:Class="Exercise2.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">

    <DockPanel>
        <Button DockPanel.Dock="Right" Content="Right" Width="80" Height="30" Margin="8" VerticalAlignment="Center"/>
        <Button DockPanel.Dock="Left" Content="Left" Width="80" Height="30" Margin="8" VerticalAlignment="Center"/>
        <Button DockPanel.Dock="Top" Content="Top" Width="80" Height="30" Margin="8" HorizontalAlignment="Center"/>
        <Button DockPanel.Dock="Bottom" Content="Bottom" Width="80" Height="30" Margin="8"/>
        <Image Source="./images/sunset.jpg"/>
    </DockPanel>
</Window>
